<h2>Trip Info:</h2>

<ul>
  <li>Date: <%= @trip.date %></li>
  <li>Cost: <%= (@trip.cost.to_f / 100).round(2) %></li>
  <li>Passenger: <%= link_to "#{@trip.passenger.name}", passenger_path(@trip.passenger) %></li>
  <li>Driver: <%= link_to "#{@trip.driver.name}", driver_path(@trip.driver) %></li>
  <% if @trip.rating != 0 %>
    <li>Rating: <%= @trip.rating %></li>
  <% else %>
    <li><%= link_to "Rate this Trip", rating_path(@trip) %>
  <% end %>
</ul>



<%= link_to "Edit Trip", edit_trip_path(@trip) %>
<%= link_to "Delete Trip", trip_path(@trip), method: :delete, data: {confirm: "Are you sure?"} %>